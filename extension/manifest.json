{
  "manifest_version": 3,
  "name": "Floating Icon Extension",
  "version": "1.0.0",
  "description": "A modern Chrome extension with a floating icon on web pages",
  "permissions": [
    "activeTab", 
    "storage",
    "tabCapture",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "DesignX Extension"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.tsx"]
    }
  ],
  "background": {
    "service_worker": "src/background/background.ts"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/content/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
} 